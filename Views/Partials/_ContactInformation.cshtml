@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
    <section class="contact-data">
        <div class="container">
            <div class="box">
                <div class="icon"><i class="fa-light fa-location-dot"></i> </div>
                <div class="info">
                    <div class="text">Visit us</div>
                    <div class="data">@Model.Value("contactInformationStreetName") <br> @Model.Value("contactInformationPostalcode") @Model.Value("contactInformationCity")</div>
                </div>
            </div>
            <div class="box">
                <div class="icon"><i class="fa-light fa-phone-volume"></i></div>
                <div class="info">
                    <div class="text">Callt us</div>
                    <div class="data">@Model.Value("contactInformationPhoneNumber1") <br> @Model.Value("contactInformationPhoneNumber2")</div>
                </div>
            </div>
            <div class="box">
                <div class="icon"><i class="fa-light fa-envelope"></i></div>
                <div class="info">
                    <div class="text">Email us</div>
                    <div class="data">@Model.Value("contactInformationEmail1")<br>@Model.Value("contactInformationEmail2")</div>
                </div>
            </div>
        </div>
    </section>